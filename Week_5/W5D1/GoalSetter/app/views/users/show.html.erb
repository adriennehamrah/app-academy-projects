<h3><%=@user.username%>'s Goals</h3>
<ul><% @user.goals.each do |goal| %>
  <li><%= link_to "#{goal.title}", goal_url(goal) %>
    <%= goal.completed ? 'completed' : '' %>
    <%= button_to 'Delete Goal', goal_url(goal), method: :delete %>
    <br>
<% end %>
</ul>

<%= link_to "Add Goal", new_goal_url %>
